<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextAppBaseTheme</item>
        <item name="android:textViewStyle">@style/TextViewForms</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="Buttons">
        <item name="android:minWidth">280dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:background">#897800e3</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#f0f0f0f0</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="GoingButtons">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">#f0f0f0f0</item>
    </style>

    <style name="EditTextAppBaseTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>-->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffb300ff</item>
    </style>
    <style name="TextViewForms" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffb300ff</item>
    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">#cf2700a3</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#F0F0F0F0</item>
    </style>

</resources>
